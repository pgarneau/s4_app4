function [ sum_total ] = RebuildSinus(sound_mag, sound_phase, fe, N)
% Find peaks
nb_peaks = 1;
min_peak_height = 3;
[amp, freq] = findpeaks(sound_mag(1:end/2), 'MinPeakProminence', 3, 'MinPeakDistance', 120);

% Rebuild sine
sum_total = 0;
t = 0:1/fe:(N/fe - 1/fe);
for index = 1:nb_peaks
    cos_content = 2*pi*(freq(index)-1)/N*fe*t+sound_phase(freq(index));
    result = 2*amp(index)/N*cos(cos_content);
    sum_total = sum_total + result;
end

figure
subplot(3,1,1)
plot(sum_total);

end

